# Use an official Ubuntu 24.04 image as the base
FROM ubuntu:24.04


# Set environment variable to avoid dialog prompts during package installation
ENV DEBIAN_FRONTEND=noninteractive


# Set the working directory to /myLocalWorkingDir
WORKDIR /myLocalWorkingDir


# Update the package list and install any available updates
RUN apt update && apt full-upgrade -y
RUN apt-get install -y wget


# Arduino related vars
ENV ARDUINO_CLI_VERSION=1.1.1
ENV XMC4ARDUINO_VERSION=3.4.1
ENV PSOC4ARDUINO_VERSION=0.0.0

# Tool related version vars
# ENV CPPCHECK_VERSION=
ENV LLVM_VERSION=19


ENV PATH="/opt/bin:$PATH"
# ENV PATH="/opt/bin:/opt/arm-gnu-toolchain-13.3.rel1-x86_64-arm-none-eabi/bin:$PATH"


# init container
RUN bash -c "$(wget -O - https://raw.githubusercontent.com/Infineon/makers-docker/refs/heads/main/bin/container_init.sh)"


# install arduino-cli
RUN bash -c "$(wget -O - https://raw.githubusercontent.com/Infineon/makers-docker/refs/heads/main/bin/install_arduino_cli.sh)"


# install LLVM tool suite
RUN bash -c "$(wget -O - https://raw.githubusercontent.com/Infineon/makers-docker/refs/heads/main/bin/install_llvm.sh)"
ENV CXX=clang++
ENV CC=clang 
 

# install cppcheck latest (needs LLVM, so keep this order of installing tools)
RUN bash -c "$(wget -O - https://raw.githubusercontent.com/Infineon/makers-docker/refs/heads/main/bin/install_cppcheck.sh)"


# print used tool related vars
RUN bash -c "$(wget -O - https://raw.githubusercontent.com/Infineon/makers-docker/refs/heads/main/bin/print_tool_versions.sh)"


# cleanup container
RUN bash -c "$(wget -O - https://raw.githubusercontent.com/Infineon/makers-docker/refs/heads/main/bin/container_cleanup.sh)"


## 
CMD \
cd /myLocalWorkingDir && \
bin/print_tool_versions.sh && \
bash

# chown -R --reference=src cppcheck-reports
